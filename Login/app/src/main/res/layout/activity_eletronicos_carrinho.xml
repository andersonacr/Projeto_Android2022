<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".eletronicos_carrinho"
    android:background="#ADD8E6">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">


        <TextView
            android:id="@+id/textView7"
            android:layout_width="match_parent"
            android:layout_height="51dp"
            android:background="#0000FF"
            android:gravity="center"
            android:text="Eletrônicos"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:textSize="20dp"/>

        <ImageView
            android:id="@+id/imageView4"
            android:layout_width="110dp"
            android:layout_height="100dp"
            app:srcCompat="@drawable/multimetro"
            android:layout_gravity="center"
            android:background="@color/white"/>

        <CheckBox
            android:id="@+id/chkMultímetro"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Multímetro - R$37,97 "
            android:background="@color/white"/>

        <ImageView
            android:id="@+id/imageView10"
            android:layout_width="110dp"
            android:layout_height="100dp"
            app:srcCompat="@drawable/capacitor_2"
            android:layout_gravity="center"/>

        <CheckBox
            android:id="@+id/chkCapacitor"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Capacitor Eletrolitico 0,47uF x 50V - R$0.20"
            android:background="@color/white"/>

        <ImageView
            android:id="@+id/imageView13"
            android:layout_width="110dp"
            android:layout_height="100dp"
            app:srcCompat="@drawable/chuveiro_eletrico_multitemperatura_maxi_ducha_branco_5500w_220v_branco_lorenzetti"
            android:layout_gravity="center"/>

        <CheckBox
            android:id="@+id/chkChuveiro"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Chuveiro Elétrico Lorenzetti 5500V 220V - R$59,99"
            android:background="@color/white"/>

        <Button
            android:id="@+id/btTotaleletro"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="TOTAL"
            android:backgroundTint="#00008B"/>

        <EditText
            android:id="@+id/edtTotaleletro"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="textPersonName"
            android:text=""
            android:visibility="invisible"
            android:hint="TOTAL"/>
    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>