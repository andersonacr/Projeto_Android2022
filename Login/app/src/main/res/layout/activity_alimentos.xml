<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".alimentos">

    <LinearLayout
        android:layout_width="409dp"
        android:layout_height="729dp"
        android:background="#ADD8E6"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/textView"
            android:layout_width="match_parent"
            android:layout_height="51dp"
            android:background="#0000FF"
            android:gravity="center"
            android:text="Alimentos"
            android:textColor="@color/white"
            android:textSize="20dp"
            android:textStyle="bold"
            android:layout_marginTop="63dp"/>

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="110dp"
            android:layout_height="100dp"
            android:layout_gravity="center"
            app:srcCompat="@drawable/doritos" />

        <CheckBox
            android:id="@+id/chkdoritos"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:text="Doritos Quejo Nacho 55g - R$4,85" />

        <ImageView
            android:id="@+id/imageView14"
            android:layout_width="110dp"
            android:layout_height="100dp"
            android:layout_gravity="center"
            app:srcCompat="@drawable/lingui_a_perdig_o" />

        <CheckBox
            android:id="@+id/chklinguiça"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:text="Linguiça Perdigão 1KG Unidade R$19,99" />

        <ImageView
            android:id="@+id/imageView15"
            android:layout_width="110dp"
            android:layout_height="100dp"
            android:layout_gravity="center"
            app:srcCompat="@drawable/lombo_de_porco" />

        <CheckBox
            android:id="@+id/chklombo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:text="Lombo de Porco 1KG - R$23.99 " />

        <Button
            android:id="@+id/btTotalalimentos"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="#00008B"
            android:text="TOTAL" />

        <EditText
            android:id="@+id/edttotalalimentos"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="TOTAL"
            android:inputType="textPersonName"
            android:text=""
            android:visibility="invisible" />

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>